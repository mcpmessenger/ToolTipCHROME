{
  "manifest_version": 3,
  "name": "ToolTip Companion (Local Storage)",
  "version": "2.0.0",
  "description": "Beautiful interactive tooltips for any webpage with privacy-first local screenshot storage",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "http://localhost:3001/*"
  ],
  "background": {
    "service_worker": "background-local.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-local.js"],
      "css": ["tooltip-styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup-local.html",
    "default_title": "ToolTip Companion Settings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["tooltip-styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}

